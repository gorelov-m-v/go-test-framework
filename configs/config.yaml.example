# Configuration Example for go-test-framework
# Copy this file to config.yaml and adjust values for your environment

# Service configurations
# Each service section contains HTTP client settings
capService:
  baseURL: https://cap.beta-09.b2bdev.pro
  timeout: 30s
  defaultHeaders:
    Accept: application/json
    Content-Type: application/json

# Add more services as needed
# anotherService:
#   baseURL: https://api.another-service.com
#   timeout: 15s
#   defaultHeaders:
#     Authorization: Bearer your-token-here

# Test data section
# Use config.UnmarshalByKey("testData", &yourStruct) to load this
testData:
  defaultUsername: admin
  defaultPassword: admin
  validEmails:
    - user1@example.com
    - user2@example.com
  testUsers:
    - username: testuser1
      password: password123
    - username: testuser2
      password: password456
